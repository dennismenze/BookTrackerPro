modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Flask App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Create Migration"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Apply Migration"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Check Database Schema"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test DB Connection"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Add Sample Authors"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Export Database"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Import Data"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Check Import"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Reset Migration"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Create Initial Migration"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Create Test User"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Author Detail"

[[workflows.workflow]]
name = "Run Flask App"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Create Migration"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flask db migrate -m 'Add image_url to Author model'"

[[workflows.workflow]]
name = "Apply Migration"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flask db upgrade"

[[workflows.workflow]]
name = "Check Database Schema"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flask db current"

[[workflows.workflow]]
name = "Test DB Connection"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_db_connection.py"

[[workflows.workflow]]
name = "Add Sample Authors"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python add_sample_authors.py"

[[workflows.workflow]]
name = "Export Database"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python export_database.py"

[[workflows.workflow]]
name = "Import Data"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python import_data.py"

[[workflows.workflow]]
name = "Check Import"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python check_import.py"

[[workflows.workflow]]
name = "Reset Migration"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python reset_migration.py"

[[workflows.workflow]]
name = "Create Initial Migration"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flask db migrate -m 'Initial migration'"

[[workflows.workflow]]
name = "Create Test User"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python create_test_user.py"

[[workflows.workflow]]
name = "Test Author Detail"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_author_detail.py"

[deployment]
run = ["sh", "-c", "python app.py"]

[[ports]]
localPort = 80
externalPort = 3000

[[ports]]
localPort = 3000
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 34121

[[ports]]
localPort = 48079
